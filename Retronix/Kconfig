if ARCH_MX6

menu "Retronix"
choice
	prompt "Retronix board select"
	optional

config TARGET_RTX_PICO_B10
	bool "Retronix PICO-B10"
	select BOARD_LATE_INIT
	select MX6Q
	select SUPPORT_SPL
	select DM
	select DM_THERMAL
	select BOARD_EARLY_INIT_F

config TARGET_RTX_PICO_B21
	bool "Retronix PICO-B21"
	select BOARD_LATE_INIT
	select MX6Q
	select SUPPORT_SPL
	select DM
	select DM_THERMAL
	select BOARD_EARLY_INIT_F

endchoice

config RTX_ANDROID_SUPPORT
	bool "Android Support"
	default n

source "Retronix/board/rtx_pico_mx6q_b10/Kconfig"
source "Retronix/board/rtx_pico_mx6q_b21/Kconfig"
source "Retronix/board/rtx_common/Kconfig"
source "Retronix/drivers/Kconfig"

endmenu

endif
